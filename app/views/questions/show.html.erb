<p id="notice"><%= notice %></p>

<p>
  <strong><%= @question.title %></strong>
</p>

<p>
  <%= @question.text %>
</p>

<p>
	<i>Gefragt von <%= @question.user_name %> am <%= @question.created_at %></i>
</p>

<table>
  <thead>
  <tr>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    # TODO: falls Rechte ok sind: ActionController::ParameterMissing in AnswersController#update
    <td><%= button_to 'Frage bearbeiten', edit_question_path, :method => "get" %></td>
    <!--<td>%= button_to 'Frage bearbeiten2', edit_question_answer_path, :method => "edit" %></td>-->
    <!--<td>%= button_to 'Frage bearbeiten3', edit_question_answer_path, :method => "get" %></td>-->
    <td><%= button_to 'Frage löschen', question_path, {:method => "delete", :id => @question.id, data: { confirm: "Bist Du sicher?"}} %></td>
  </tr>
  </tbody>
</table>

<div id='thread'>
<%= render 'thread'%>
</div>

<table>
  <thead>
  <tr>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= form_tag(new_answer_path, :method=>'get') do %><%= text_field_tag "text" %><%= hidden_field_tag "question_id", @question.id %>&nbsp;&nbsp;<%= submit_tag 'Frage beantworten' %><% end %></td>
  </tr>
  </tbody>
</table>

<table>
  <thead>
  <tr>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= button_to 'Zurück', questions_path, :method => "get" %></td>
  </tr>
  </tbody>
</table>
