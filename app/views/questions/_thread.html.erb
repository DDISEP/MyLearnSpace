<table>
  <thead>
  <tr>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @answers.each do |answer| %>
      <tr>
        <td><strong><%= User.find_by_id(answer.user_id).username %>: &nbsp;</strong></td>
        <td><%= answer.text %>&nbsp;&nbsp;</td>
        <td><i><%= answer.created_at %> &nbsp; &nbsp;</i></td>
        <!-- td><%= button_to 'Bearbeiten', edit_answer_path, :method => "get" %></td> -->
        <td><%= button_to 'Bearbeiten', answer, :method => "patch" %></td>
        <!-- td><%= button_to 'Löschen', answer, :method => "delete" %></td> -->
        <td><%= button_to 'Löschen', answer, {:method => "delete", data: { confirm: "Bist Du sicher?"}} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
