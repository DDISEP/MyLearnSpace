<%= form_for :knowledgeElement, url: knowledge_elements_path  do |f| %>
    <div class="container-fluid">
      <div class="panel panel-primary">
        <div class="panel-body">
          <div id="name_field" class="row-fluid">
            <div class="span2"><%= f.label :name, "Name" %></div>
            <div class="span10"><%= f.text_field :name, placeholder:"Gib hier einen Namen ein...", style:"width:100%; height:100%;" %></div>
          </div>
          <div id="description_field" class="row-fluid">
            <div class="span2"><%= f.label :description, "Beschreibung" %></div>
            <div class="span10"><%= f.text_area :description, placeholder:"Gib hier eine Beschreibung ein...", maxlength:"1000", style:"width:100%; height:60px; resize:vertical;" %></div>
          </div>
          <div id="save_button" class="row-fluid">
            <div class="span10 offset2"><%= f.submit "Name und Beschreibung speichern", class:"btn btn-xs btn-success", style:"width:100%" %></div>
          </div>
        </div>
      </div>
    </div>
<% end %>