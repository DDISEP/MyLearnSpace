


<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

<div class="container-fluid">
  <div class="panel panel-default">
    <div class="panel-heading"><b><p style="font-size: 12pt">Um dich zu registrieren, fülle das folgende Formular aus:</p></b></div>
    <div class="panel-body">
      <div class="row-fluid">
        <div class="form-group">
          <div class="span2"><b><%= f.label :username, 'Username:' %></b></div>
          <div class="span4"><%= f.text_field :username, style:"width:100%; height:100%;" %></div>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span2"><b><%= f.label :email, 'E-Mail Adresse:' %></b></div>
        <div class="span4"><%= f.text_field :email, style:"width:100%; height:100%;" %></div>
      </div>
      <div class="row-fluid">
        <div class="span2"><b><%= f.label :firstname, 'Vorname:' %></b></div>
        <div class="span4"><%= f.text_field :firstname, style:"width:100%; height:100%;" %></div>
      </div>
      <div class="row-fluid">
        <div class="span2"><b><%= f.label :lastname, 'Nachname:' %></b></div>
        <div class="span4"><%= f.text_field :lastname, style:"width:100%; height:100%;" %></div>
      </div>
      <div class="row-fluid">
        <div class="span2"><b><%= f.label :birthday, 'Geburtsdatum:' %></b></div>
        <div class="span6"><%= f.date_select :birthday, start_year: 1900, end_year: Date.today.year %></div>
      </div>
      </br>
      <div class="row-fluid">
        <div class="span8"><b><p style="color: red">Solltest du jünger als 18 Jahre alt sein, so gib Bitte die Daten eines Erziehungsberechtigten an.</p></b></div>
      </div>
      <div class="row-fluid">
        <div class="span2"><b><%= f.label :firstNameParent, 'Vorname (eines Erziehungsberechtigten):' %></b></div>
        <div class="span4"><%= f.text_field :firstNameParent, style:"width:100%; height:100%;" %></div>
      </div>
      <div class="row-fluid">
        <div class="span2"><b><%= f.label :lastNameParent, 'Nachname (eines Erziehungsberechtigten):' %></b></div>
        <div class="span4"><%= f.text_field :lastNameParent, style:"width:100%; height:100%;" %></div>
      </div>
      <div class="row-fluid">
        <div class="span2"><b><%= f.label :emailParent, 'E-Mail Adresse (eines Erziehungsberechtigten):' %></b></div>
        <div class="span4"><%= f.text_field :emailParent, style:"width:100%; height:100%;" %></div>
      </div>
      </br>
      <div class="row-fluid">
        <div class="span8"><b><p style="color: black">Dein Passwort muss zwischen 12 und 20 Zeichen entalten und mind. einen Großbuchstaben, einen Kleinbuchstaben, eine Ziffer und ein Sonderzeichen enthalten.</p></b></div>
      </div>
      <div class="row-fluid">
        <div class="span2"><%= f.label :password, 'Passwort:' %></div>
        <div class="span4"><%= f.password_field :password, style:"width:100%; height:100%;" %></div>
      </div>
      <div class="row-fluid">
        <div class="span2"><%= f.label :password_confirmation, 'Passwort wiederholen:' %></div>
        <div class="span4"><%= f.password_field :password_confirmation, style:"width:100%; height:100%;" %></div>
      </div>
      <div class="field">
        <%= f.label :learner %><br />
        <%= f.check_box :learner %>
      </div>
      <div class="field">
        <%= f.label :admin %><br />
        <%= f.check_box :admin %>
      </div>
      <div class="field">
        <%= f.label :teacher %><br />
        <%= f.check_box :teacher %>
      </div>
      <div id="send_button" class="row-fluid">
        <div class="span6"><%= f.submit 'Speichern', class:"btn btn-xs btn-success"%></div>
      </div>
    </div>
  </div>
</div>


<% end %>



