
<%= form_for @user do |f| %>

  <font size="3">
  <table width="50%" cellspacing="10">
  <tr><td>Benutzername</td><td> <%=f.text_field :username %></td></tr>
  <tr><td>E-Mail Adresse</td><td> <%=f.email_field :email %></td></tr>	
  <tr><td>Passwort</td><td><%=f.password_field :password %></td></tr>
  <tr><td>   </td></tr>	
  <tr><td>Bist du ein Schüler?</td><td><%= f.select :pupil, [["--Bitte auswählen--", ], ["ja", true], ["Nein", false]]%></td></tr>
  <tr><td>   </td></tr>
  <tr><td>  </td><td>  <%= f.submit "Profil jetzt anlegen"%> </td></tr>
  </table>
  </font>
<% end %>
 





