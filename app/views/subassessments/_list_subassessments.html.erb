<% if @subassessments.length == 0 then %>
	<h3> Noch keine Teilaufgaben vorhanden!</h3>
<% else %>
<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>Aufgabentext</th>
			<th>LÃ¶sungstext</th>
			<th>Punkte</th>
			<th></th>
			<th></th>
		</tr>
	</thead>	
	<tbody>
		<% @subassessments.each do |s| %>
			<tr>
				<td><%= s.text %></td>
				<td><%= s.solution %></td>
				<td><%= s.points %></td>
				<td>
					<%= button_to edit_assessment_subassessment_path(s.assessment, s),
						:method => :get, class:"btn btn-xs btn-warning" do %>
							<span class="glyphicon glyphicon-pencil"></span>
					<% end %>
				</td>
				<td>
					<%= button_to assessment_subassessment_path(s.assessment, s, :authenticity_token => form_authenticity_token), :method => :delete,
					data:{confirm:"Willst Du die Teilaufgabe wirklich loeschen?"}, class:"btn btn-xs btn-danger" do %>
						<span class="glyphicon glyphicon-trash"></span>
				<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
<% end %>
