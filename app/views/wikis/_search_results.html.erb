<h1><%= @wikis.count %> Artikel gefunden!</h1>
<table>
  <tr>
    <th>Titel</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @wikis.each do |wiki| %>
  <tr>
    <td><strong><%= wiki.title %></td></strong>
    <td>	
    	<i><%= strip_tags(wiki.article.first(30)) %>
    	<% if !wiki.article.at(31).nil? %>
    	...
    	<% end %></td></i>
    <td><%= link_to ' Artikel anzeigen', wiki_path(wiki) %></td>
   </tr>
<% end %>
</table>


