<h1>Newsfeed</h1>

<table>
  <thead>
    <tr>
      <th>Betreff</th>
      <th>Inhalt</th>
      <th>Newsfeedtoall</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @newsfeeds.each do |newsfeed| %>
      <tr>
        <td><%= newsfeed.subject %></td>
        <td><%= newsfeed.message %></td>
        <td><%= newsfeed.newsfeedToAll %></td>
        <td><%= link_to 'Show', newsfeed %></td>
        <td><%= link_to 'Edit', edit_newsfeed_path(newsfeed) %></td>
        <td><%= link_to 'Destroy', newsfeed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neue Newsfeed Nachricht erstellen', new_newsfeed_path %>
