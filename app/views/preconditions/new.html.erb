        <!-- list the CognitiveDimensions of the Learning Objectives, click on creates new precondition -->
        <% ke.learning_objectives.each do |lo| %>
          <td>
            <%= link_to  lo.cognitiveDimension_to_s, {:action => "create",
                         :knowledge_element_id=> :knowledge_lement_id,
                         :learning_objective_id => :learning_objective_id,
                         :child_learning_objective_id=> :learning_objective_id,
                         :parent_learning_objective_id=> lo.id},
                         :method => "post" %></td>
        <%end%>
      </tr>
    <% end %>
