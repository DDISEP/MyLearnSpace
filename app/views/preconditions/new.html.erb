  <% if @preconditions.to_s.length == 0 then %>
      <div id="notice"> Noch keine Preconditions vorhanden!</div>
  <% end %>

  <table class="table table-striped">
    <tbody>

    <% @knowledgeElements.each do |ke| %>
      <tr>
