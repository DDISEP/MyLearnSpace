<div class="container-fluid">
  <div class="row-fluid">
    <div class="span10"><h2>Precondition anlegen</h2></div>
    <div class="span2"><%= button_to "zurÃ¼ck", knowledge_elements_path, :method => :get, class:"btn btn-xs btn-primary", style:"width:100%"%></div>
