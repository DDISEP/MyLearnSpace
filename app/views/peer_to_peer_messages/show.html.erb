<div class="container">
  <h1><%=@peer_to_peer_message.subject%></h1>
  <p id="notice"><%= notice %></p>
  <td>Die Nachricht wurde von <%= @peer_to_peer_message.sender %> an dich gesendet.</td>
  <div class="panel panel-primary">
    <div class="panel-body">
      <div id="subject_field" class="row-fluid">
        <div class="span1"><b>Betreff</b></div>
        <div class="span11"><%= @peer_to_peer_message.subject %></div>
      </div>
      <div id="message_field" class="row-fluid">
        <div class="span1"><b>Inhalt</b></div>
        <div class="span11"><%= @peer_to_peer_message.message %></div>
      </div>
    </div>
  </div>
  <div class="span3" style="padding-top: 20px">
    <%= button_to peer_to_peer_messages_path, :method => :get, class:"btn btn-xs btn-primary" do %>
        <span class="glyphicon glyphicon-arrow-left"></span> zur√ºck
    <% end %>
  </div>

</div>