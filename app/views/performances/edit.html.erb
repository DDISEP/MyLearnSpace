<div class="container-fluid">
  <%= form_for [@subexercise, @performance] do |f| %>
  <div class="row-fluid">
    <div class="span10"><h2>Bewerte deine abgegebene Lösung:</h2></div>

      <div class="row-fluid">
      <div class="span10">Aufgabe: <%= %> </div>
      <div class="span10"><%= @subexercise.exercise.description %></div>
      <div class="span10"><%= @subexercise.text %></div>

      <div class="span10">Deine Abgabe:<%= @performance.handedin %></div>
        <%if Solution.where(subexercise_id: @subexercise).count > 0 then %>
      <div class="span10">Lösung: <%= @subexercise.solution.solution %> </div>
      <div class="span10">Ergänzung zur Lösung: <%= @subexercise.solution.description %></div>
        <% else %>
            <div class = "span10">Kein Lösungsvorschlag vorhanden!</div>
        <% end %>
    </div>

    <div id="description_field" class="row-fluid">
      <div class="span5">Wie viele Punkte hast du erreicht? (maximale Punktezahl ist <%= @subexercise.points %>) <%= f.number_field :achieved_points, placeholder:"Punktzahl", id:"achieved_points", style:"width:100%; height:100%;", onchange:"validatePoints()" %></div>

    </div>


    <div class="row-fluid">
      <div class="span6"><%= f.submit "Fertig", id:"submit_button", class:"btn btn-xs btn-primary" %></div>
    </div>
  </div>
  <% end %>
</div>